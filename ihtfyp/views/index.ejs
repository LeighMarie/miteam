<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- Custom styles for this template FROM BOOTSTRAP TEMPLATE-->
    <link href="/stylesheets/signin.css" rel="stylesheet">
    <link rel='stylesheet' href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"/>
    <script src="/javascripts/motio.min.js"></script> 
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
  </head>
  <body>
    <!-- <h1><%= title %></h1>
    <p>Welcome to <%= title %></p> -->
    <div id="panning" class="panning" ></div>
    <div id= "homeModal" class="modal fade" tabindex="-1" role="dialog">
      <!-- Bootstrap modal template -->
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header" style = "text-align:center">
            <img src= "/images/logo.png" id='logo' height="30%" width = "30%" >
            <h4 class="modal-title"></h4>
          </div>
          <div class="modal-body" >
            <!-- Bootstrap form template-->
            <form class="form-signin">
              <h2 class="form-signin-heading" style="text-align:center">Please sign in</h2>
              <label for="inputEmail" class="sr-only">Email address</label>
              <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus>
              <label for="inputPassword" class="sr-only">Password</label>
              <input type="password" id="inputPassword" class="form-control" placeholder="Password" required>
              <div class="checkbox">
                <label>
                  <input type="checkbox" value="remember-me"> Remember me
                </label>
              </div>
              <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
            </form>
          </div>
          <div class="modal-footer">
          </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
  </body>
   <!-- End Bootstrap form template -->
   <!-- End Bootstrap modal template -->
  <script type="text/javascript">
  // Panning
  var element = document.querySelector('#panning');
  /* code from Motio */
  var panning = new Motio(element, {
    fps: 30, // Frames per second. More fps = higher CPU load.
    speedX: -50, // Negative horizontal speed = panning to left.
    speedY: -50 
  });
  panning.play(); // start animation
  //start modal
  //$('#homeModal').modal('show');
  $('#homeModal').modal({
    backdrop: 'static',
    keyboard: false
  })
  </script>
</html>